<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chplalex.test360kt">

    <uses-permission android:name="android.permission.INTERNET" />
    <!--
    Allows Glide to monitor connectivity status and restart failed requests if users go from a
    a disconnected to a connected network state.
    -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- the  application uses, but does not require a camera in order to function -->
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Test360kt">
        <activity android:name="com.chplalex.test360kt.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.chplalex.test360kt.cameras.ImageActivity"
            android:label="@string/title_activity_image"
            android:theme="@style/Theme.Test360kt.NoActionBar"/>

        <activity android:name="com.chplalex.test360kt.internet.PanoramaActivity"
            android:label="@string/title_activity_panorama"
            android:theme="@style/Theme.Test360kt.NoActionBar"/>

        <activity android:name="com.chplalex.test360kt.cameras.ShooterActivity"
            android:label="@string/title_activity_shooter"
            android:theme="@style/Theme.Test360kt.NoActionBar"/>

    </application>

</manifest>