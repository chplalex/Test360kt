<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:columnCount="3"
        android:orientation="horizontal"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imgCamSimple"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="@color/design_default_color_background"
            android:src="@drawable/ic_camera"
            android:scaleType="fitCenter"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2.5dp"
            android:text="@string/text_camera_simple"
            android:textAlignment="center"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/imgCamSimpleRight"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="@color/design_default_color_background"
            android:src="@drawable/ic_camera"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/imgCamFull"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="@color/design_default_color_background"
            android:src="@drawable/ic_camera"
            android:scaleType="fitCenter"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginTop="2.5dp"
            android:layout_marginBottom="2.5dp"
            android:text="@string/text_camera_full"
            android:textAlignment="center"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/imgCamFullRight"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="@color/design_default_color_background"
            android:src="@drawable/ic_camera"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/imgCameraPSDKSave"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="@color/design_default_color_background"
            android:src="@drawable/pano"
            android:scaleType="fitCenter"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginTop="2.5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/text_camera_panorama_sdk_save"
            android:textAlignment="center"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/imgCameraPSDKSaveRight"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="@color/design_default_color_background"
            android:src="@drawable/pano"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/imgCameraPSDK"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="@color/design_default_color_background"
            android:src="@drawable/pano"
            android:scaleType="fitCenter"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginTop="2.5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/text_camera_panorama_sdk"
            android:textAlignment="center"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/imgCameraPSDKRight"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="@color/design_default_color_background"
            android:src="@drawable/pano"
            android:scaleType="fitCenter"/>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
