<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewInstruction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="32sp"
        tools:text="@string/tap_anywhere_to_start" />

    <TextView
        android:id="@+id/textViewLensName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:background="#88a8a8a8"
        android:shadowRadius="50"
        android:padding="20px"
        android:layout_marginBottom="200px"
        android:layout_marginEnd="70px"
        tools:text="@string/no_lenses" />

    <ImageView
        android:id="@+id/imageViewRotator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="200px"
        android:layout_marginStart="70px"
        tools:src="@drawable/handheld"
        />

    <ImageView
        android:id="@+id/imageViewCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>